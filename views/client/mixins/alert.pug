mixin alert-success ()
    - if (messages.success) 
      div(class="alert alert-success" show-alert data-time=5000) #{messages.success}
        button(class="alert alert-success" close-alert data-time) x

mixin alert-error ()
    - if (messages.error) 
      div(class="alert alert-danger" show-alert data-time=5000) #{messages.error}
        button(class="alert alert-success" close-alert data-time) x