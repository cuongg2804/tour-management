extends ../../layouts/default.pug

block main
  h1(class="mb-4") #{pageTitle}


  .card.mb-30000
    .card-header Chi tiết
    .card-body
     
      table(
        class="table table-hover table-sm mt-3"
      )
        thead
          tr
            th STT
            th Hình ảnh
            th Tiêu đề
            th Vị trí
            th Trạng thái
            th Số lượng Tour
            th Mô tả
            th Ngày tạo
            th Hành động
            
        tbody
            tr 
              td #{index+1}
              td
                img(
                  src=detailCategory.image
                  alt=detailCategory.title
                  width="100px"
                  height="auto"
                )
              td #{detailCategory.title}
              td #{detailCategory.position}
              td
                if (detailCategory.status === "active")
                  a(
                    href="javascript:;"
                    class="badge badge-success"
                  ) Hoạt động
                else
                  a(
                    href="javascript:;"
                    class="badge badge-danger"
                  ) Dừng hoạt động
              td #{detailCategory.countTour}
              td #{detailCategory.description}
              td #{new Date(detailCategory.createdAt).toISOString().slice(0, 16)}
              td
                a(
                  class="btn btn-warning btn-sm ml-1"
                  href=`/${prefixAdmin}/categories/edit/${detailCategory.id}`
                ) Sửa
                button(
                  class="btn btn-danger btn-sm ml-1"
                  button-delete
                  data-id=detailCategory.id
                ) Xóa